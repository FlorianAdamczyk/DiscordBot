# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Server/Channel IDs
DISCORD_GUILD_ID=1234567890123456789
DISCORD_ANNOUNCE_CHANNEL_ID=1234567890123456789

# FritzBox Konfiguration
# WICHTIG: Komplette URL mit Port (z.B. https://xyz.myfritz.net:41284)
FRITZ_URL=https://your_fritzbox.myfritz.net:41284
FRITZ_USER=discordwol
FRITZ_PASSWORD=your_secure_fritzbox_password_here
SERVER_MAC=AA:BB:CC:DD:EE:FF

# Zugriffskontrolle (Optional)
# Komma-getrennte Liste von Discord User IDs, die /bootserver nutzen dürfen
# Leer lassen = alle dürfen (nicht empfohlen!)
ALLOWED_USER_IDS=123456789012345678,987654321098765432
# Komma-getrennte Liste von Discord Role IDs, die /bootserver nutzen dürfen
ALLOWED_ROLE_IDS=111222333444555666

# Cooldown in Sekunden (Standard: 120 = 2 Minuten)
COOLDOWN_SECONDS=120

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: Port für Flask Web Server (für Hosting-Plattformen)
PORT=10000
